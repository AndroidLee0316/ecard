<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="left"
            android:text="@string/pasc_ecard_add_title"
            android:textColor="@color/pasc_ecard_text_color"
            android:textSize="@dimen/text_size_17" />

        <View
            android:layout_width="10dp"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="15dp"
            android:text="@string/pasc_ecard_add_title"
            android:textColor="@color/pasc_ecard_tip_color"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <View
        android:id="@+id/view_line_10"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pasc_ecard_driving_color"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/pasc_ecard_line_color"></View>

</LinearLayout>